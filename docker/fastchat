FROM python:3.9-slim-buster

# Install dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    build-essential \
    cmake

# Clone repository and navigate to the FastChat folder
RUN git clone https://github.com/lm-sys/FastChat.git /app
WORKDIR /app/

# Install Package
RUN pip3 install --upgrade pip && pip3 install -e .

# Set the entrypoint
#ENTRYPOINT [ "fschat" ]